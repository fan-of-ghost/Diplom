<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="189.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.diplom.Controllers.ExtensionAbonementController">

    <children>
        <VBox layoutX="50.0" layoutY="30.0" spacing="20.0">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="ID Абонемента:" />
                <Region HBox.hgrow="ALWAYS" />
                <TextField fx:id="abonementIdField" prefWidth="200.0" />
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Количество минут:" />
                <Region HBox.hgrow="ALWAYS" />
                <Spinner fx:id="minutesSpinner" prefWidth="200.0" />
            </HBox>

            <HBox alignment="CENTER" prefHeight="54.0" prefWidth="324.0" spacing="20.0">
                <Button fx:id="saveButton" onAction="#handleSave" prefWidth="100.0" text="Сохранить" />
                <Button fx:id="cancelButton" onAction="#handleCancel" prefWidth="100.0" text="Отклонить" />
            </HBox>
        </VBox>
    </children>

</AnchorPane>
